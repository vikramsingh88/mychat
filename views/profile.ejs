<!DOCTYPE html>
<html>

<head>
  <link data-require="bootstrap@4.0.5" data-semver="4.0.5" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" />
  <script data-require="bootstrap@4.0.5" data-semver="4.0.5" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="css/jquery.emojipicker.css">
  <link href = "https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel = "stylesheet">
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
  <script src = "https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
  <script type="text/javascript" src="js/jquery.emojipicker.js"></script>

  <!-- Emoji Data -->
  <link rel="stylesheet" type="text/css" href="css/jquery.emojipicker.tw.css">
  <link rel="stylesheet" type="text/css" href="css/profile.css">
  <link rel="stylesheet" type="text/css" href="css/search.css">
  <link rel="stylesheet" type="text/css" href="css/chat_bubble.css">
  <script type="text/javascript" src="js/jquery.emojis.js"></script>
  
</head>

<body>
<div class="container-fluid">
  <header> 
  <div class="row">
    <div class="col-md-1">
      <div id='profile-pic' style="background-image: url(/images/avatar.jpg);"></div>
    </div>
    <div class="col-md-1" style="padding-top: 25px;">
      <h1><%= chatname %></h1>
    </div>
    <div class="col-md-7"></div>
    <div class="col-md-3">
      <div class="input-group" style="padding-top: 25px;">
        <input id="search" type="text" class="form-control" placeholder="Search for buddy...">        
      </div>
    </div>
  </div> 
  </header>

  <div id="dialog" title="Add to buddy list" style="padding: 0px;">
    <div id="searchlist"></div>
  </div>

    <div class="row"> 
      <div class="col-md-2 f-list" id="user_list_div">
            <ul id="users" class="list-group"></ul>
      </div>
      <div class="col-md-10 chatbox">
        <div class="row">
          <div class="col-md-12">
            <div id='f-name' style="background: #c3c388"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
              <div id='msg-area'>
                <div id="contentWrap" >
                    <div id="chatWrap" style=" border-radius: 10px;min-height: 500px;max-height: 500px;overflow-y: scroll;">
                        <ol class="chat" id="chat"></ol>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
    <div class="row"> 
      <div class="col-md-12">
        <form id="message-box">
              <div class="form-inline sendbar">
                <p align="center" class='typing' id="typing"> </p><br/>
                <input type="text" class='form-control inputmsg' id="message" placeholder="type your message" />
                &nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-default">Send</button>
              </div>
        </form>
      </div>
    </div>

  </div>

  
  <script src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="js/profile.js"> </script>
  <script>
  // Check browser support
  if (typeof(Storage) !== "undefined") {
      // Store
      console.log("Local storage set",'<%= chatname %>');
      localStorage.setItem("chatname", '<%= chatname %>');
  }
</script>

</body>

</html>